<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialog_item_action_width"
    android:layout_height="@dimen/dialog_item_action_height"
    android:layout_marginStart="@dimen/margin_horizontal_small"
    android:layout_marginEnd="@dimen/margin_horizontal_small"
    android:layout_marginTop="@dimen/margin_vertical_large"
    android:layout_marginBottom="@dimen/margin_vertical_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/action_icon"
            android:layout_width="@dimen/dialog_item_action_icon_size"
            android:layout_height="@dimen/dialog_item_action_icon_size"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:contentDescription="@string/content_desc_action"
            tools:src="@drawable/ic_click"/>

        <TextView
            android:id="@+id/action_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_small"
            android:layout_marginTop="@dimen/margin_vertical_default"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_list_item_text_small"
            android:singleLine="true"
            android:ellipsize="marquee"
            tools:text="Action name"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>