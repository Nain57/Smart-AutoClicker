<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="HeaderCardView">
        <item name="android:layout_marginStart">@dimen/margin_horizontal_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_horizontal_default</item>
        <item name="android:layout_marginTop">@dimen/margin_vertical_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_vertical_default</item>
    </style>

    <style name="HeaderTitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:paddingStart">@dimen/margin_horizontal_small</item>
        <item name="android:paddingTop">@dimen/margin_vertical_default</item>
        <item name="android:paddingBottom">@dimen/margin_vertical_default</item>
        <item name="android:fontFamily">sans-serif-medium"</item>
        <item name="android:textSize">@dimen/text_size_item_title</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/textTitle</item>
    </style>

    <style name="ItemView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:paddingStart">@dimen/margin_horizontal_default</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal_default</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ItemView.Small">
        <item name="android:paddingStart">@dimen/margin_horizontal_small</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal_small</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:drawable/divider_horizontal_bright</item>
    </style>

    <style name="DialogTitle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:paddingStart">@dimen/margin_horizontal_large</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/primaryDark</item>
        <item name="android:textColor">@color/textTitle</item>
        <item name="android:textSize">@dimen/text_size_dialog_title</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <style name="DialogChoiceItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_list_item_text</item>
        <item name="android:drawableEnd">@drawable/ic_chevron</item>
        <item name="android:drawablePadding">@dimen/margin_horizontal_small</item>
    </style>

    <style name="OverlayCardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/overlayMenuBackground</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="OverlayButtonsLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/margin_horizontal_mini</item>
        <item name="android:paddingEnd">@dimen/margin_horizontal_mini</item>
        <item name="android:paddingTop">@dimen/margin_vertical_small</item>
        <item name="android:paddingBottom">@dimen/margin_vertical_small</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="OverlayButton">
        <item name="android:layout_width">@dimen/overlay_menu_btn_size</item>
        <item name="android:layout_height">@dimen/overlay_menu_btn_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/overlayMenuButtons</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="OverlaySelectorView">
        <item name="colorBackground">@color/overlayClickSelectorBackground</item>
    </style>

    <style name="OverlaySelectorView.Click">
        <item name="radius">@dimen/overlay_click_selector_radius</item>
        <item name="innerRadius">@dimen/overlay_click_selector_inner_radius</item>
        <item name="thickness">@dimen/overlay_click_selector_thickness</item>
        <item name="colorInner">@color/overlayViewPrimary</item>
        <item name="colorOutlinePrimary">@color/overlayViewAccentPrimary</item>
        <item name="colorOutlineSecondary">@color/overlayViewAccentSecondary</item>
    </style>

    <style name="OverlaySelectorView.Condition">
        <item name="colorOutlinePrimary">@color/overlayViewPrimary</item>
        <item name="thickness">@dimen/overlay_condition_selector_thickness</item>
        <item name="cornerRadius">@dimen/overlay_condition_selector_corner_radius</item>
        <item name="defaultWidth">@dimen/overlay_condition_selector_width</item>
        <item name="defaultHeight">@dimen/overlay_condition_selector_height</item>
        <item name="resizeHandleSize">@dimen/overlay_condition_selector_resize_handle_size</item>
    </style>

</resources>