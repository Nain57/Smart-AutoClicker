<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Needed to start the SmartAutoClickerService as a foreground service -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Needed to use the media projection with SmartAutoClickerService. Starting with SDK 34 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION"/>
    <!-- Needed to display the overlay_menu over other apps -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!-- Needed to prompt the permission request at the right time -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- Needed to get the list of applications to start when creating an intent action.-->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
    </queries>

    <application
        android:name=".SmartAutoClickerApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_smart_auto_clicker"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_smart_auto_clicker_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="DataExtractionRules">

        <activity
            android:name="com.buzbuz.smartautoclicker.activity.ScenarioActivity"
            android:screenOrientation="locked"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".SmartAutoClickerService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:foregroundServiceType="mediaProjection"
            android:exported="true">

            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data android:name="android.accessibilityservice" android:resource="@xml/accessibilityservice" />
        </service>

    </application>

</manifest>