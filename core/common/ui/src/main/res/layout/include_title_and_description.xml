<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title"
        style="@style/AppTheme.Field.TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/margin_horizontal_large"
        android:layout_marginVertical="@dimen/margin_vertical_mini"
        android:visibility="gone"
        tools:text="Field title"
        tools:visibility="visible"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description"
        style="@style/AppTheme.Field.SubText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/margin_horizontal_default"
        android:layout_marginVertical="@dimen/margin_vertical_mini"
        android:gravity="center_vertical"
        android:visibility="gone"
        tools:text="Field Subtext for the selector with a long text just to check if wrapping is OK."
        tools:visibility="visible"/>

</LinearLayout>