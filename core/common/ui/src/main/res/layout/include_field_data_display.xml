<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/field_min_height">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/dialog_choice_item_icon_size"
        android:layout_height="@dimen/dialog_choice_item_icon_size"
        android:layout_marginEnd="@dimen/margin_horizontal_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/title_and_description"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:visibility="gone"
        tools:src="@drawable/ic_add"
        tools:ignore="ContentDescription" />

    <include layout="@layout/include_title_and_description"
        android:id="@+id/title_and_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>