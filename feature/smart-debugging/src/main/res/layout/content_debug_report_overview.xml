<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_vertical_default"
        android:layout_marginBottom="@dimen/margin_vertical_default"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleLarge"
        tools:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_vertical_large"
        android:layout_marginBottom="@dimen/margin_vertical_extra_large"
        android:scrollbars="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default"
            android:layout_marginVertical="@dimen/margin_vertical_large"
            android:orientation="vertical">

            <!-- Scenario -->
            <include layout="@layout/include_field_data_display"
                android:id="@+id/field_scenario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.divider.MaterialDivider
                style="@style/AppTheme.Widget.Divider.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <!-- Total duration -->
            <include layout="@layout/include_field_data_display"
                android:id="@+id/field_total_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.divider.MaterialDivider
                style="@style/AppTheme.Widget.Divider.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <!-- Image processed count -->
            <include layout="@layout/include_field_data_display"
                android:id="@+id/field_img_proc_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.divider.MaterialDivider
                style="@style/AppTheme.Widget.Divider.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <!-- Average image processing duration -->
            <include layout="@layout/include_field_data_display"
                android:id="@+id/field_avg_img_proc_dur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.divider.MaterialDivider
                style="@style/AppTheme.Widget.Divider.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <!-- Events trigger count -->
            <include layout="@layout/include_field_data_display"
                android:id="@+id/field_img_evt_fulfilled_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.divider.MaterialDivider
                style="@style/AppTheme.Widget.Divider.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <!-- Conditions trigger count -->
            <include layout="@layout/include_field_data_display"
                android:id="@+id/field_trigger_evt_fulfilled_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>
