<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/AppTheme.Widget.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_horizontal_default"
    android:layout_marginVertical="@dimen/margin_horizontal_small">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default"
        android:layout_marginVertical="@dimen/margin_vertical_default">

        <ImageView
            android:id="@+id/condition_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="?attr/colorSurfaceVariant"
            tools:src="@drawable/ic_debug_timeline"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/condition_name_text"
            style="@style/AppTheme.TextAppearance.ListItemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_horizontal_default"
            app:layout_constraintStart_toEndOf="@id/condition_image"
            app:layout_constraintEnd_toStartOf="@id/condition_duration_text"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="My cool condition"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/condition_duration_text"
            style="@style/AppTheme.TextAppearance.BodySmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/condition_name_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/condition_name_text"
            app:layout_constraintBottom_toBottomOf="@id/condition_name_text"
            tools:text="98ms"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/margin_horizontal_default"
            app:layout_constraintStart_toEndOf="@id/condition_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/condition_name_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/condition_confidence_text"
                style="@style/AppTheme.TextAppearance.BodySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:drawableEndCompat="@drawable/ic_debug_confirm"
                tools:text="Confidence: 98.05 / 95"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/condition_should_be_detected_text"
                style="@style/AppTheme.TextAppearance.BodySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:drawableEndCompat="@drawable/ic_debug_confirm"
                android:text="@string/item_event_occurrence_details_image_should_be_detected"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/condition_fulfilled_text"
                style="@style/AppTheme.TextAppearance.BodySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:drawableEndCompat="@drawable/ic_debug_confirm"
                android:text="@string/item_event_occurrence_details_image_fulfilled"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>