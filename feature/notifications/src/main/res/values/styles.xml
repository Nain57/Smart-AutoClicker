<resources>

    <!-- Base notifications theme. -->
    <style name="AppTheme.Notification" />

    <!-- Styles for the buttons of the notification. -->
    <style name="AppTheme.Notification.Button">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="AppTheme.Notification.Button.Filled">
        <item name="android:background">@drawable/background_button_filled</item>
    </style>

    <style name="AppTheme.Notification.Button.Outlined">
        <item name="android:background">@drawable/background_button_outlined</item>
    </style>

</resources>