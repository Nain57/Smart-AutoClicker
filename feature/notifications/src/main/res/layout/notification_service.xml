<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notification_size"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_scenario_name"
        style="@style/AppTheme.TextAppearance.Body"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="@dimen/margin_horizontal_default"
        android:layout_marginVertical="@dimen/margin_vertical_small"
        android:textColor="@color/notification_text_color"
        android:maxLines="2"
        android:gravity="center_vertical"
        tools:text="Scenario:\nMy cool scenario name"/>

    <ImageButton
        android:id="@+id/button_play_pause"
        style="@style/AppTheme.Notification.Button.Filled"
        android:layout_width="@dimen/notification_buttons_size"
        android:layout_height="@dimen/notification_buttons_size"
        android:layout_marginHorizontal="@dimen/margin_horizontal_small"
        android:src="@drawable/ic_notification_play_arrow"/>

    <ImageButton
        android:id="@+id/button_show_hide"
        style="@style/AppTheme.Notification.Button.Outlined"
        android:layout_width="@dimen/notification_buttons_size"
        android:layout_height="@dimen/notification_buttons_size"
        android:layout_marginStart="@dimen/margin_horizontal_small"
        android:src="@drawable/ic_notification_visible_on"/>

</LinearLayout>