<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.buzbuz.smartautoclicker.feature.scenario.config.dumb.ui.brief.DumbActionBriefView
        android:id="@+id/view_dumb_brief"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:id="@+id/background_instructions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/space_background_top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_fade_bottom"/>

    <Space
        android:id="@+id/space_background_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/overlay_dumb_brief_background_top_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/list_dumb_actions"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_dumb_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_vertical_large"
        app:layout_constraintBottom_toTopOf="@id/button_previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:scrollbars="none"
        tools:listitem="@layout/item_dumb_action_brief"
        tools:itemCount="12"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_previous"
        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_extra_large"
        android:layout_marginTop="@dimen/margin_vertical_default"
        android:layout_marginBottom="@dimen/margin_vertical_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:icon="@drawable/ic_chevron_inverted"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_dumb_action_index"
        style="@style/AppTheme.Widget.Card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default"
        app:layout_constraintStart_toEndOf="@+id/button_previous"
        app:layout_constraintTop_toTopOf="@+id/button_previous"
        app:layout_constraintEnd_toStartOf="@+id/button_next"
        app:layout_constraintBottom_toBottomOf="@+id/button_previous">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_dumb_action_index"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size_list_item_text_big"
            android:textStyle="bold"
            android:singleLine="true"
            tools:text="1/12"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_next"
        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_extra_large"
        android:layout_marginVertical="@dimen/margin_vertical_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_previous"
        app:layout_constraintBottom_toBottomOf="@+id/button_previous"
        app:icon="@drawable/ic_chevron"/>

</androidx.constraintlayout.widget.ConstraintLayout>