<resources>

    <!-- Base theme. -->
    <style name="AppTheme.DumbScenarioConfig" />

    <!-- Style for the click/swipe position(s) overlay selector view. -->
    <style name="AppTheme.DumbScenarioConfig.PositionSelector">
        <item name="colorBackground">@color/overlayActionsBriefBackground</item>
        <item name="radius">@dimen/overlay_dumb_position_selector_radius</item>
        <item name="innerRadius">@dimen/overlay_dumb_position_selector_inner_radius</item>
        <item name="thickness">@dimen/overlay_dumb_position_selector_thickness</item>
        <item name="colorInner">@color/overlayViewPrimary</item>
        <item name="colorOutlinePrimary">@color/overlayViewPrimary</item>
        <item name="colorOutlineSecondary">@color/overlayViewPrimary</item>
    </style>

    <!-- Style for an outlined icon button -->
    <style name="AppTheme.Widget.InfiniteButton" parent="Widget.Material3.Button.IconButton.Outlined">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/selector_button_infinite_background</item>
        <item name="iconTint">@color/selector_button_infinite_tint</item>
    </style>

</resources>