<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_time_left"
        style="@style/AppTheme.Widget.Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_vertical_large"
        android:layout_marginHorizontal="@dimen/margin_horizontal_default"
        android:layout_marginBottom="@dimen/margin_vertical_large"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_next_level">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_time_left"
            style="@style/AppTheme.TextAppearance.BodyLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_horizontal_default"
            android:layout_marginVertical="@dimen/margin_vertical_extra_large"
            android:text="@string/message_time_left"
            android:gravity="center_horizontal"
            tools:text="Time left: 38"/>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_next_level"
        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_small"
        app:layout_constraintTop_toTopOf="@id/card_time_left"
        app:layout_constraintBottom_toBottomOf="@id/card_time_left"
        app:layout_constraintStart_toEndOf="@id/card_time_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:icon="@drawable/ic_game_next_level"
        android:visibility="gone"
        tools:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>